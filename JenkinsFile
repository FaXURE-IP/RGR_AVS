pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Клонировать репозиторий или проверить код
                git 'https://github.com/FaXURE-IP/RGR_AVS.git' // Замените на ваш репозиторий
            }
        }

        stage('Build') {
            steps {
                script {
                    // Компиляция файла main.c с помощью gcc
                    sh 'gcc /app/main.c -o /app/main.out'
                }
            }
        }

        stage('Test') {
            steps {
                // Выполнение тестов (если необходимо)
                // Пример команды:
                // sh '/app/main.out'
            }
        }

        stage('Archive') {
            steps {
                // Архивирование результата сборки
                archiveArtifacts artifacts: '/app/main.out', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            // Очистка или другие действия после выполнения pipeline
            cleanWs() // Очистка рабочего пространства
        }
    }
}
